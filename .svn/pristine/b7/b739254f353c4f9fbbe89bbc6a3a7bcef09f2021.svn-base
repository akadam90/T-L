@{
    ViewBag.Title = "ResetPassword";
}

<div style="width:500px;margin: 5% auto;background-color:White;" class="form-wrapper" id="login-form-wrapper">
    <div style="border:1px solid gray; padding: 10px">
        <h2>Reset Password</h2>
        <p>
            Please enter your email address associated to this account.
            We will email you your new password.
        </p>
       

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        <form action="@Url.Action("ResetPassword")" method="post">
                <div class="form-label">
                    Email
                </div> 
                <input type="text" name="email" class="text-box" style="width:250px" />

                <div class="float-right">
                    <input type="submit" value="Reset Password" class="main-action-button" />
                </div>
                
                <div class="clear"></div>
        </form>
    </div>
</div>
