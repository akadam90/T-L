
<div class="modal fade" id="run-dates-test-modal" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Submit Run Dates</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="run-dates-test-form" action="@Url.Action("SubmitRunDates", "api/TestApi")" method="POST">
                    <input type="hidden" id="input-run-dates-test-testid" name="TestId" />

                    <div class="form-group">
                        <div class="input-daterange input-group col-lg-10" style="margin: 0 auto;">
                            <input type="text" class="input-sm form-control" id="input-run-dates-test-startdate" name="StartDate" />
                            <span class="input-group-addon">to</span>
                            <input type="text" class="input-sm form-control" id="input-run-dates-test-enddate" name="EndDate" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
